<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mj_vrplayer_dialog_white_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="添加"
        android:textColor="@color/colorGrayOne"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_current_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="@null"
        android:textColor="@color/colorGrayTwo"
        android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/colorLayoutBg"
        android:visibility="gone">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/mj_vrplayer_icon_folder_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="返回上一级"
            android:textColor="@color/colorGrayThree"
            android:textSize="12sp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listView"
        style="@style/listviewNoDividerStyle"/>
    <View style="@style/grayHorizontalLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorGrayTwo"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorLightBlueText"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
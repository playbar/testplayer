<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shape_pop_dark_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_2d"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_2d"
                    android:layout_width="23.3dp"
                    android:layout_height="23.3dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="2D"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3d_left_right"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_3d_left_right"
                    android:layout_width="23.3dp"
                    android:layout_height="23.3dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_3d_left_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="3D左右"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3d_top_bottom"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_3d_top_bottom"
                    android:layout_width="23.3dp"
                    android:layout_height="23.3dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_3d_top_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="3D上下"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:background="#555555"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_plane"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plane"
                    android:layout_width="23.3dp"
                    android:layout_height="23.3dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_plane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="平面"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_peskoe"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_peskoe"
                    android:layout_width="23.3dp"
                    android:layout_height="23.3dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_peskoe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="半球"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sphere"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_sphere"
                    android:layout_width="23.3dp"
                    android:layout_height="23.3dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_sphere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="球面"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_file_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="20dip"
        android:scaleType="fitXY"
        android:src="@mipmap/flyscreen_folder_icon" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorGrayOne"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/tv_video_play"
        android:layout_toRightOf="@+id/iv_file_image"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tv_video_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:background="@drawable/shape_btn_blue_bg"
        android:textColor="@color/colorLightBlueText"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="@string/flyscreen_preview"
        android:visibility="gone"
        android:textSize="@dimen/btn_text_size" />

</RelativeLayout>
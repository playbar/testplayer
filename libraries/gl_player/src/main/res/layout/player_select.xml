<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="match_parent"
    android:background="#E619191a">

    <RelativeLayout
        android:id="@+id/close_btn"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选集"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginLeft="13.5dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/play_touch_popup_icon_close_normal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13.5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#666666"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/video_select_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:scrollbars="none"
        android:listSelector="@drawable/play_list_selector"
        android:layout_below="@+id/close_btn"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/video_index_select_view"
        android:layout_below="@+id/close_btn">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/index_layout"
            android:layout_height="40dp"
            android:background="#4D000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.5dp"
                android:textColor="@color/play_select_grid_item_text_click"
                android:textSize="11sp"
                android:gravity="center"
                android:text=""
                android:layout_centerVertical="true"
                android:id="@+id/index_tv"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13.5dp"
                android:src="@drawable/public_arrow_up"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/index_img"
                />
        </RelativeLayout>


        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="4"
            android:scrollbars="none"
            android:cacheColorHint="@null"
            android:horizontalSpacing="13.5dp"
            android:verticalSpacing="13.5dp"
            android:listSelector="@android:color/transparent"
            android:id="@+id/index_select_gridView"
            android:layout_marginTop="6.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
</RelativeLayout>
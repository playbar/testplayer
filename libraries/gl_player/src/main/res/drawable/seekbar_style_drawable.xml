<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/seekbar_bg_color" />
            <corners android:radius="5dip" />
            <gradient
                android:endColor="@color/seekbar_bg_color"
                android:startColor="@color/seekbar_bg_color" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:endColor="@color/disable_text_color"
                    android:startColor="@color/disable_text_color" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:endColor="#6933c2"
                    android:startColor="#418ccd" />
            </shape>
        </clip>
    </item>
</layer-list>


